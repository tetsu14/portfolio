<p id="notice"><%= notice %></p>
 <aside class="sidebar">  
  <section>
    <span class="label">プロフィール画像</span>
    <h3 class="user-info">
      <% if @user.user_image %>
      <%= image_tag "/user_images/#{@user.user_image}", class: "profile" %>
      <% else %>
      <%= image_tag "images.jpg", class: "profile" %>
    <% end %>
    </h3>
  </section>

  <section>
    <span class="label">ユーザー</span>
    <h3 class="user-info"><%= @user.name %></h3>
  </section>
  
  <section>
    <span class="label">メールアドレス</span>
    <h3 class="user-info"><%= @user.email %></h3>
  </section>
   <%= link_to @user.likes.count, like_notes_user_path(@user.id) %>個の投稿にいいね！しています
  <% if current_user?(@user) %>
    <section>
      <small><%= link_to 'プロフィールを編集', edit_user_path(@user) %></small>
    </section>
  <% end %>

</aside>

<ul class="notes">
  <li><%= @user.notes.count %>post</li>
  <%= render @notes %>
  <li>
      <%= link_to follows_user_path(@user) do %>
        <div class="text">フォロー</div>
  
      <% end %>
    </li>
    <li>
      <%= link_to followers_user_path(@user) do %>
        <div class="text">フォロワー</div>
      <% end %>
    </li>
</ul>


 
