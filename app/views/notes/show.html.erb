<p id="notice" class="alert alert-success">
  <%= notice %>
</p>
<div class="note-show">
<h2>image</h2>
  <% if @note.image? %>
    <%=  image_tag @note.image.url%>
    <% else %>
    <%= image_tag 'noimage.gif' %>
  <% end %>
  <h2>title</h2>
  <p><%= @note.title %></p>
  <h2>content</h2>
  <p><%= @note.content %></p>

  <% if current_user?(@note.user) %>
    <%= link_to "edit", edit_note_path(@note.id), class: "btn btn-primary " %>
    <%= link_to "destroy", note_path(@note.id), method: "delete", class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
  <% end %>
 <div id="like-link">
  <% if current_user.likes.find_by(note_id: @note.id) %>
  <%= link_to 'いいね！を取り消す', unlike_path(@note.id), method: :delete %>
<% else %>
  <%= link_to 'いいね！', like_path(@note.id), method: :post %>
<% end %>
  </div>
</div>
<div class="iine">
    <%= link_to @note.likes.count, liking_users_note_path(@note.id), class: "iine", id: "like-count" %>人がいいね！といっています
</div>


</div>